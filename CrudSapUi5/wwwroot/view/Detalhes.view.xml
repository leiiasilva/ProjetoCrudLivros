<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Detalhes"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form">
<Page
	title="{i18n>tituloDaPaginaDetalhes}"
	showNavButton="true"
	navButtonPress=".botaoVoltar">
	
	<headerContent>
		<Button text="Editar"  press=".botaoEditar" icon="sap-icon://edit" />
		<Button text="Deletar"  press=".botaoDeletar" icon="sap-icon://delete" />
	</headerContent>
	
<VBox >
	<form:SimpleForm
		width="70%"
	 	layout="ResponsiveGridLayout" 
	 	editable="true">
	
		<Label text="Código"  /> <Text  text="{livro>/codigo}"    /> 

		<Label text="Nome"   /> <Text  text="{livro>/nome}" editable="false" /> 

		<Label text="Autor"  /> <Text  text="{livro>/autor}" editable="false" /> 

		<Label text="Editora"  /> <Text  text="{livro>/editora}" editable="false" /> 

		<Label text="Ano Publicação"/>
		<Text  text="{
					path: 'livro>/anoPublicacao',
					type: 'sap.ui.model.type.Date',
					formatOptions: {
					  style: 'long',
					  source: {
						pattern: 'yyyy-MM-ddTHH:mm:ss'
					  }
					}
				  }"  editable="false" /> 


	</form:SimpleForm>	
</VBox>
</Page>
</mvc:View>




