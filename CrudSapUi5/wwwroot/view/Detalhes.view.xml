<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Detalhes"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
	title="{i18n>tituloDaPaginaDetalhes}"
	showNavButton="true"
	navButtonPress=".botaoVoltar">
	<headerContent>
	
		<Button text="Editar"  press=".botaoEditar" icon="sap-icon://edit" />
		<Button text="Deletar"  press=".botaoDeletar" icon="sap-icon://delete" />
	
	</headerContent>

	<l:VerticalLayout
	class="sapUiContentPadding"
	width="70%">
	
	
	<l:content>
		<List>
			<DisplayListItem
				label="CÃ³digo"
				value="{livro>/codigo}" />
			<DisplayListItem
				label="Nome"
				value="{livro>/nome}" />
			<DisplayListItem
				label="Autor"
				value="{livro>/autor}" />
			<DisplayListItem
				label="Editora"
				value="{livro>/editora}" />
			<DisplayListItem
				label="Ano Publicacao"
				value="{
					path: 'livro>/anoPublicacao',
					type: 'sap.ui.model.type.Date',
					formatOptions: {
					  style: 'long',
					  source: {
						pattern: 'yyyy-MM-ddTHH:mm:ss'
					  }
					}
				  }"/>
		</List>

	</l:content>
</l:VerticalLayout>
	
</Page>
</mvc:View>