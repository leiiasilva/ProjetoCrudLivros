<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.TelaCadastro"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>telaCadastroPageTitle}"
		showNavButton="true"
		navButtonPress=".aoClicarEmVoltar">

		<l:VerticalLayout id="tabela" class="sapUiContentPadding" width="50%">
		<Label text="Nome" labelFor="inputNome" />
		<Input
			id="inputNome"
			value="{livro>/nome}"
			required="true"
			placeholder="Digite o nome do livro"
			class="sapUiSmallMarginBottom" 
			change="aoPreencherCampo"/>

		<Label text="Autor" labelFor="inputAutor" />
		<Input
			id="inputAutor"
			value="{livro>/autor}"
			required="true"
			placeholder="Digite o nome do autor"
			class="sapUiSmallMarginBottom" />

		<Label text="Editora" labelFor="inputEditora" />
		<Input
			id="inputEditora"
			value="{livro>/editora}"
			required="true"
			placeholder="Digite o nome da editora"
			class="sapUiSmallMarginBottom" />

		<Label text="Ano da Publicação" labelFor="AnoPublicacao"/>
		<DatePicker
			id="AnoPublicacao"
			value="{livro>/anoPublicacao}"
			required="true"
			valueFormat="yyyy-MM-ddTHH:mm:ss"
			placeholder="DD/MM/AAAA"
			class="sapUiSmallMarginBottom" />
			
		<l:HorizontalLayout
            class="sapUiContentPadding">
        	<l:content>            
                <Button text="Salvar" press=".aoClicarEmSalvar"></Button>        
            </l:content>
        </l:HorizontalLayout>
	</l:VerticalLayout>
	</Page>
</mvc:View>

